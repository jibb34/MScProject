[#] Local MySQL configuration for the development database.
[#] See https://dev.mysql.com/doc/refman/en/option-files.html for details.

[mysqld]
# Enable strict SQL mode and avoid silent truncation.
sql_mode=STRICT_ALL_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

# Tune InnoDB for modest environments; adjust as needed.
innodb_buffer_pool_size=256M
innodb_flush_log_at_trx_commit=1

# Ensure utf8mb4 is used throughout the server.
character-set-server=utf8mb4
collation-server=utf8mb4_0900_ai_ci

[client]
default-character-set=utf8mb4